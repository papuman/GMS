<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- TiloPay Payment Provider -->
        <record id="payment_provider_tilopay" model="payment.provider">
            <field name="name">TiloPay</field>
            <field name="code">tilopay</field>
            <field name="state">disabled</field>
            <field name="is_published" eval="False"/>
            <field name="company_id" ref="base.main_company"/>

            <!-- Default configuration (admin must update with real credentials) -->
            <field name="tilopay_use_sandbox" eval="True"/>
            <field name="tilopay_enable_sinpe" eval="True"/>
            <field name="tilopay_enable_cards" eval="True"/>
            <field name="tilopay_enable_yappy" eval="False"/>

            <!-- Placeholder credentials (admin MUST replace) -->
            <field name="tilopay_api_key">YOUR_API_KEY_HERE</field>
            <field name="tilopay_api_user">YOUR_API_USER_HERE</field>
            <field name="tilopay_api_password">YOUR_API_PASSWORD_HERE</field>
            <field name="tilopay_secret_key">YOUR_SECRET_KEY_HERE</field>

            <!-- Payment flow configuration -->
            <field name="capture_manually" eval="False"/>
            <field name="allow_tokenization" eval="False"/>
            <field name="support_refund" eval="partial"/>
            <field name="support_manual_capture" eval="False"/>
        </record>

    </data>
</odoo>
