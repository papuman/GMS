<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TiloPay Payment Transaction Form View -->
    <record id="payment_transaction_form_tilopay" model="ir.ui.view">
        <field name="name">payment.transaction.form.tilopay</field>
        <field name="model">payment.transaction</field>
        <field name="inherit_id" ref="payment.payment_transaction_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='provider_details']" position="after">
                <group name="tilopay_details" string="TiloPay Details" invisible="provider_code != 'tilopay'">
                    <group>
                        <field name="tilopay_payment_id" readonly="1"/>
                        <field name="tilopay_payment_method" readonly="1" widget="badge"/>
                        <field name="tilopay_transaction_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="tilopay_webhook_received" readonly="1" widget="boolean_toggle"/>
                        <field name="tilopay_webhook_count" readonly="1"/>
                        <field name="tilopay_is_pending" invisible="1"/>
                    </group>
                    <group colspan="2">
                        <field name="tilopay_payment_url" readonly="1" widget="url"/>
                    </group>
                </group>

                <notebook invisible="provider_code != 'tilopay'">
                    <page string="TiloPay Response" groups="base.group_system">
                        <field name="tilopay_raw_response" readonly="1" widget="ace" options="{'mode': 'json'}"/>
                    </page>
                </notebook>
            </xpath>

            <xpath expr="//header" position="inside">
                <button name="action_tilopay_refresh_status"
                        type="object"
                        string="Refresh Status"
                        invisible="provider_code != 'tilopay' or not tilopay_payment_id"
                        groups="account.group_account_manager"
                        class="btn-secondary"/>
            </xpath>
        </field>
    </record>

    <!-- TiloPay Payment Transaction Tree View -->
    <record id="payment_transaction_list_tilopay" model="ir.ui.view">
        <field name="name">payment.transaction.list.tilopay</field>
        <field name="model">payment.transaction</field>
        <field name="inherit_id" ref="payment.payment_transaction_list"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="tilopay_payment_method" optional="show" string="Payment Method"/>
                <field name="tilopay_webhook_received" optional="hide" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>

</odoo>
