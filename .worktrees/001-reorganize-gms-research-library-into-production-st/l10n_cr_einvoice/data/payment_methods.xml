<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
            Costa Rica Payment Method Catalog
            Source: Hacienda Resolution MH-DGT-RES-0027-2024 (v4.4)
            These codes are official and must not be modified
        -->

        <!-- 01 - Efectivo (Cash) -->
        <record id="payment_method_efectivo" model="l10n_cr.payment.method">
            <field name="code">01</field>
            <field name="name">Efectivo</field>
            <field name="description">Pago en efectivo (billetes y monedas)</field>
            <field name="active">True</field>
            <field name="requires_transaction_id">False</field>
            <field name="icon">money-bill</field>
            <field name="badge_color">success</field>
        </record>

        <!-- 02 - Tarjeta (Card - Credit/Debit) -->
        <record id="payment_method_tarjeta" model="l10n_cr.payment.method">
            <field name="code">02</field>
            <field name="name">Tarjeta</field>
            <field name="description">Pago con tarjeta de crédito o débito</field>
            <field name="active">True</field>
            <field name="requires_transaction_id">False</field>
            <field name="icon">credit-card</field>
            <field name="badge_color">primary</field>
        </record>

        <!-- 03 - Cheque (Check) -->
        <record id="payment_method_cheque" model="l10n_cr.payment.method">
            <field name="code">03</field>
            <field name="name">Cheque</field>
            <field name="description">Pago con cheque bancario</field>
            <field name="active">True</field>
            <field name="requires_transaction_id">False</field>
            <field name="icon">file-text</field>
            <field name="badge_color">warning</field>
        </record>

        <!-- 04 - Transferencia (Bank Transfer/Deposit) -->
        <record id="payment_method_transferencia" model="l10n_cr.payment.method">
            <field name="code">04</field>
            <field name="name">Transferencia - depósito bancario</field>
            <field name="description">Transferencia bancaria o depósito en cuenta</field>
            <field name="active">True</field>
            <field name="requires_transaction_id">False</field>
            <field name="icon">exchange</field>
            <field name="badge_color">info</field>
        </record>

        <!-- 06 - SINPE Móvil (Mobile Payment System) -->
        <record id="payment_method_sinpe" model="l10n_cr.payment.method">
            <field name="code">06</field>
            <field name="name">SINPE Móvil</field>
            <field name="description">Pago mediante SINPE Móvil (Sistema Interbancario de Pagos Electrónicos)</field>
            <field name="active">True</field>
            <field name="requires_transaction_id">True</field>
            <field name="icon">mobile</field>
            <field name="badge_color" eval="'purple'"/>
        </record>

        <!--
            NOTE: Code "05" (Recaudado por terceros) is intentionally excluded
            Reason: Only applicable to specific business scenarios (utilities, municipalities)
            Not relevant for GMS gym management use case
            Can be added in future if needed
        -->

    </data>
</odoo>
