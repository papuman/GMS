<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

        <!-- Daily Summary Report Email -->
        <record id="cron_daily_summary_report" model="ir.cron">
            <field name="name">E-Invoice: Daily Summary Report</field>
            <field name="model_id" ref="model_l10n_cr_einvoice_analytics_dashboard"/>
            <field name="state">code</field>
            <field name="code">model.send_daily_summary_email()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="priority">10</field>
            <field name="user_id" ref="base.user_admin"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=8, minute=0, second=0)"/>
        </record>

        <!-- Weekly Revenue Report -->
        <record id="cron_weekly_revenue_report" model="ir.cron">
            <field name="name">E-Invoice: Weekly Revenue Report</field>
            <field name="model_id" ref="model_l10n_cr_einvoice_analytics_dashboard"/>
            <field name="state">code</field>
            <field name="code">model.send_weekly_revenue_report()</field>
            <field name="interval_number">7</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="priority">10</field>
            <field name="user_id" ref="base.user_admin"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=7)).replace(hour=9, minute=0, second=0)"/>
        </record>

        <!-- Monthly Hacienda Compliance Report -->
        <record id="cron_monthly_hacienda_report" model="ir.cron">
            <field name="name">E-Invoice: Monthly Hacienda Report</field>
            <field name="model_id" ref="model_l10n_cr_einvoice_analytics_dashboard"/>
            <field name="state">code</field>
            <field name="code">model.send_monthly_hacienda_report()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="priority">10</field>
            <field name="user_id" ref="base.user_admin"/>
            <field name="nextcall" eval="(DateTime.now().replace(day=1) + timedelta(days=32)).replace(day=1, hour=10, minute=0, second=0)"/>
        </record>

        <!-- Quarterly Performance Review -->
        <record id="cron_quarterly_performance_report" model="ir.cron">
            <field name="name">E-Invoice: Quarterly Performance Report</field>
            <field name="model_id" ref="model_l10n_cr_einvoice_analytics_dashboard"/>
            <field name="state">code</field>
            <field name="code">model.send_quarterly_performance_report()</field>
            <field name="interval_number">3</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="False"/>
            <field name="priority">10</field>
            <field name="user_id" ref="base.user_admin"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=90)).replace(hour=11, minute=0, second=0)"/>
        </record>

        <!-- System Health Check (Hourly) -->
        <record id="cron_system_health_check" model="ir.cron">
            <field name="name">E-Invoice: System Health Check</field>
            <field name="model_id" ref="model_l10n_cr_einvoice_analytics_dashboard"/>
            <field name="state">code</field>
            <field name="code">model.check_system_health_and_alert()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="priority">5</field>
            <field name="user_id" ref="base.user_admin"/>
            <field name="nextcall" eval="DateTime.now() + timedelta(hours=1)"/>
        </record>


</odoo>
