<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Gym POS Configuration
             Receipt header/footer are intentionally left empty so they
             inherit from the company record (name, phone, email).
             Users can customize them via POS > Configuration > Settings. -->
        <record id="pos_config_gym" model="pos.config">
            <field name="name">GYM POS</field>
            <field name="company_id" ref="base.main_company"/>

            <!-- E-Invoice Settings -->
            <field name="l10n_cr_enable_einvoice" eval="True"/>
            <field name="l10n_cr_require_customer_id" eval="False"/>
            <field name="l10n_cr_auto_submit" eval="True"/>
            <field name="l10n_cr_offline_mode" eval="False"/>
            <field name="l10n_cr_allow_anonymous" eval="True"/>
            <field name="l10n_cr_default_email_customer" eval="True"/>
            <field name="l10n_cr_terminal_id">001</field>

            <!-- Receipt footer — generic, not business-specific -->
            <field name="receipt_footer">*** Este es un comprobante válido ***</field>

        </record>

    </data>
</odoo>
