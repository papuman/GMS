<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Default CABYS code (system parameter)
             Users MUST update this to match their business type.
             Common codes:
               9652000009900 = Sports/recreation facility operation services (gyms)
               5610000000000 = Restaurant/food services
             Full catalog: https://www.hacienda.go.cr/ATV/Login.aspx -->
        <record id="ir_config_default_cabys_code" model="ir.config_parameter">
            <field name="key">l10n_cr_einvoice.default_cabys_code</field>
            <field name="value">9652000009900</field>
        </record>

        <!-- Gym Product Category -->
        <record id="product_category_gym_memberships" model="product.category">
            <field name="name">Gym Memberships</field>
        </record>

        <record id="product_category_gym_services" model="product.category">
            <field name="name">Gym Services</field>
        </record>

        <!-- Gym Products â€” Example pricing (update via Products menu)
             Prices are in CRC and should be adjusted per business. -->

        <!-- Monthly Membership -->
        <record id="product_gym_membership_monthly" model="product.product">
            <field name="name">Monthly Gym Membership</field>
            <field name="list_price">0</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product_category_gym_memberships"/>
            <field name="available_in_pos" eval="True"/>
            <field name="description_sale">Monthly unlimited access to gym facilities (+ IVA)</field>
        </record>

        <!-- Quarterly Membership -->
        <record id="product_gym_membership_quarterly" model="product.product">
            <field name="name">Quarterly Gym Membership (3 months)</field>
            <field name="list_price">0</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product_category_gym_memberships"/>
            <field name="available_in_pos" eval="True"/>
            <field name="description_sale">3-month unlimited access to gym facilities (+ IVA)</field>
        </record>

        <!-- Annual Membership -->
        <record id="product_gym_membership_annual" model="product.product">
            <field name="name">Annual Gym Membership (12 months)</field>
            <field name="list_price">0</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product_category_gym_memberships"/>
            <field name="available_in_pos" eval="True"/>
            <field name="description_sale">12-month unlimited access to gym facilities (+ IVA)</field>
        </record>

        <!-- Day Pass -->
        <record id="product_gym_day_pass" model="product.product">
            <field name="name">Gym Day Pass</field>
            <field name="list_price">0</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product_category_gym_services"/>
            <field name="available_in_pos" eval="True"/>
            <field name="description_sale">Single day access to gym facilities (+ IVA)</field>
        </record>

        <!-- Personal Training Session -->
        <record id="product_gym_personal_training" model="product.product">
            <field name="name">Personal Training Session (1 hour)</field>
            <field name="list_price">0</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product_category_gym_services"/>
            <field name="available_in_pos" eval="True"/>
            <field name="description_sale">One-on-one personal training session (+ IVA)</field>
        </record>

        <!-- Equipment Rental -->
        <record id="product_gym_equipment_rental" model="product.product">
            <field name="name">Equipment Rental</field>
            <field name="list_price">0</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product_category_gym_services"/>
            <field name="available_in_pos" eval="True"/>
            <field name="description_sale">Locker or towel rental (+ IVA)</field>
        </record>

    </data>
</odoo>
