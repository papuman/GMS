<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- D-150 VAT Report Tree View -->
    <record id="view_d150_report_list" model="ir.ui.view">
        <field name="name">l10n_cr.d150.report.list</field>
        <field name="model">l10n_cr.d150.report</field>
        <field name="arch" type="xml">
            <list string="D-150 VAT Reports" decoration-success="state=='accepted'" decoration-info="state=='ready'" decoration-warning="state=='submitted'" decoration-danger="state=='error'">
                <field name="name"/>
                <field name="period_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="sales_total_tax" sum="Total Sales VAT" widget="monetary"/>
                <field name="purchases_total_tax" sum="Total Purchase VAT" widget="monetary"/>
                <field name="net_amount_due" sum="Net Amount Due" widget="monetary"/>
                <field name="state" widget="badge" decoration-success="state=='accepted'" decoration-info="state=='ready'" decoration-warning="state=='submitted'" decoration-muted="state=='draft'" decoration-danger="state=='error'"/>
            </list>
        </field>
    </record>

    <!-- D-150 VAT Report Form View -->
    <record id="view_d150_report_form" model="ir.ui.view">
        <field name="name">l10n_cr.d150.report.form</field>
        <field name="model">l10n_cr.d150.report</field>
        <field name="arch" type="xml">
            <form string="D-150 VAT Report">
                <header>
                    <button name="action_calculate" string="Calculate" type="object" class="oe_highlight" invisible="state != 'draft'" confirm="This will recalculate all VAT amounts. Continue?"/>
                    <button name="action_generate_xml" string="Generate XML" type="object" class="oe_highlight" invisible="state not in ['calculated', 'ready']"/>
                    <button name="action_sign_xml" string="Sign XML" type="object" class="oe_highlight" invisible="state != 'ready' or not xml_content"/>
                    <button name="action_submit_to_hacienda" string="Submit to Hacienda" type="object" class="oe_highlight" invisible="state != 'ready' or not xml_signed" confirm="Submit this VAT declaration to Hacienda?"/>
                    <button name="action_check_status" string="Check Status" type="object" invisible="state not in ['submitted']"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="state in ['submitted', 'accepted']" confirm="This will reset the report to draft state. Continue?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,calculated,ready,submitted,accepted"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Smart buttons can be added here in future -->
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="period_id" required="1" readonly="state != 'draft'"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="proportionality_factor" readonly="1"/>
                            <field name="previous_balance" readonly="state != 'draft'"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Sales (Output VAT)" name="sales">
                            <group>
                                <group string="Sales at 13%">
                                    <field name="sales_13_base" readonly="state != 'draft'"/>
                                    <field name="sales_13_tax" readonly="1"/>
                                </group>
                                <group string="Sales at 4%">
                                    <field name="sales_4_base" readonly="state != 'draft'"/>
                                    <field name="sales_4_tax" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Sales at 2%">
                                    <field name="sales_2_base" readonly="state != 'draft'"/>
                                    <field name="sales_2_tax" readonly="1"/>
                                </group>
                                <group string="Sales at 1%">
                                    <field name="sales_1_base" readonly="state != 'draft'"/>
                                    <field name="sales_1_tax" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Exempt Sales">
                                    <field name="sales_exempt" readonly="state != 'draft'"/>
                                </group>
                                <group string="Total Sales">
                                    <field name="sales_total_base" readonly="1" class="oe_subtotal_footer_separator"/>
                                    <field name="sales_total_tax" readonly="1" class="oe_subtotal_footer_separator"/>
                                </group>
                            </group>
                        </page>

                        <page string="Purchases (Input VAT)" name="purchases">
                            <!-- Purchases at 13% - Split by Goods/Services per CR regulation -->
                            <group string="Purchases at 13% VAT">
                                <group string="Goods (Bienes)">
                                    <field name="purchases_goods_13_base" readonly="state != 'draft'"/>
                                    <field name="purchases_goods_13_tax" readonly="1"/>
                                </group>
                                <group string="Services (Servicios)">
                                    <field name="purchases_services_13_base" readonly="state != 'draft'"/>
                                    <field name="purchases_services_13_tax" readonly="1"/>
                                </group>
                            </group>

                            <!-- Purchases at Reduced Rates -->
                            <group>
                                <group string="Purchases at 4%">
                                    <field name="purchases_4_base" readonly="state != 'draft'"/>
                                    <field name="purchases_4_tax" readonly="1"/>
                                </group>
                                <group string="Purchases at 2%">
                                    <field name="purchases_2_base" readonly="state != 'draft'"/>
                                    <field name="purchases_2_tax" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Purchases at 1%">
                                    <field name="purchases_1_base" readonly="state != 'draft'"/>
                                    <field name="purchases_1_tax" readonly="1"/>
                                </group>
                                <group string="Exempt Purchases">
                                    <field name="purchases_exempt" readonly="state != 'draft'"/>
                                </group>
                            </group>

                            <!-- Totals -->
                            <group>
                                <group string="Total Purchases">
                                    <field name="purchases_total_base" readonly="1" class="oe_subtotal_footer_separator"/>
                                    <field name="purchases_total_tax" readonly="1" class="oe_subtotal_footer_separator"/>
                                </group>
                                <group/>
                            </group>
                        </page>

                        <page string="VAT Settlement" name="settlement">
                            <group>
                                <group string="Output VAT (Sales - IVA Generado)">
                                    <field name="sales_total_tax" readonly="1" class="text-success" widget="monetary"/>
                                </group>
                                <group string="Input VAT (Purchases - IVA Soportado)">
                                    <field name="purchases_total_tax" readonly="1" class="text-info" widget="monetary"/>
                                </group>
                            </group>
                            <group>
                                <group string="Proportionality Adjustment">
                                    <field name="proportionality_factor" readonly="1"/>
                                    <field name="adjusted_credit" readonly="1" widget="monetary"/>
                                </group>
                                <group string="Previous Period Balance">
                                    <field name="previous_balance" readonly="state != 'draft'" widget="monetary"/>
                                </group>
                            </group>
                            <separator/>
                            <group>
                                <group string="Final Settlement">
                                    <field name="net_amount_due" readonly="1" class="oe_subtotal_footer_separator" widget="monetary" decoration-danger="net_amount_due &gt; 0" decoration-success="net_amount_due &lt;= 0"/>
                                    <field name="amount_to_pay" readonly="1" invisible="net_amount_due &lt;= 0" widget="monetary" class="text-danger"/>
                                    <field name="credit_to_next_period" readonly="1" invisible="net_amount_due &gt; 0" widget="monetary" class="text-success"/>
                                </group>
                                <group/>
                            </group>
                            <div class="alert alert-danger" role="alert" invisible="net_amount_due &lt;= 0">
                                <strong>VAT Payable:</strong> ₡<field name="amount_to_pay" readonly="1" widget="monetary"/> must be paid to Hacienda by the deadline.
                            </div>
                            <div class="alert alert-success" role="alert" invisible="net_amount_due &gt; 0">
                                <strong>VAT Credit:</strong> ₡<field name="credit_to_next_period" readonly="1" widget="monetary"/> will be carried forward to next month.
                            </div>
                        </page>

                        <page string="Hacienda Submission" name="submission" invisible="state in ['draft', 'calculated']">
                            <group>
                                <group>
                                    <field name="submission_key" readonly="1"/>
                                    <field name="submission_date" readonly="1"/>
                                </group>
                                <group>
                                    <field name="acceptance_date" readonly="1"/>
                                    <field name="hacienda_message" readonly="1"/>
                                </group>
                            </group>
                            <group string="XML Content">
                                <field name="xml_content" widget="ace" options="{'mode': 'xml'}" readonly="1"/>
                            </group>
                            <group string="Signed XML" invisible="not xml_signed">
                                <field name="xml_signed" widget="ace" options="{'mode': 'xml'}" readonly="1"/>
                            </group>
                        </page>

                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Internal notes about this VAT declaration..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- D-150 VAT Report Search View -->
    <record id="view_d150_report_search" model="ir.ui.view">
        <field name="name">l10n_cr.d150.report.search</field>
        <field name="model">l10n_cr.d150.report</field>
        <field name="arch" type="xml">
            <search string="D-150 VAT Reports">
                <field name="name"/>
                <field name="period_id"/>
                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Calculated" name="filter_calculated" domain="[('state', '=', 'calculated')]"/>
                <filter string="Ready" name="filter_ready" domain="[('state', '=', 'ready')]"/>
                <filter string="Submitted" name="filter_submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Accepted" name="filter_accepted" domain="[('state', '=', 'accepted')]"/>
                <filter string="Errors" name="filter_error" domain="[('state', '=', 'error')]"/>
                <separator/>
                <filter string="VAT Payable" name="filter_payable" domain="[('net_amount_due', '&gt;', 0)]"/>
                <filter string="VAT Credit" name="filter_credit" domain="[('net_amount_due', '&lt;=', 0)]"/>
                <separator/>
                <filter string="Period" name="group_period" context="{'group_by': 'period_id'}"/>
                <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
            </search>
        </field>
    </record>

    <!-- D-150 VAT Report Action -->
    <record id="action_d150_report" model="ir.actions.act_window">
        <field name="name">D-150 VAT Declarations</field>
        <field name="res_model">l10n_cr.d150.report</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new D-150 VAT Declaration
            </p>
            <p>
                The D-150 monthly VAT declaration reports all sales and purchases with VAT,
                calculates the net VAT amount due or credit, and submits to Hacienda via TRIBU-CR.
            </p>
        </field>
    </record>

</odoo>
