<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- POS Offline Queue Tree View -->
        <record id="view_pos_offline_queue_list" model="ir.ui.view">
            <field name="name">l10n_cr.pos.offline.queue.list</field>
            <field name="model">l10n_cr.pos.offline.queue</field>
            <field name="arch" type="xml">
                <list string="Offline Queue" decoration-success="state == 'synced'" decoration-danger="state == 'failed'" decoration-warning="state == 'pending'" decoration-info="state == 'syncing'">
                    <field name="name"/>
                    <field name="pos_order_id"/>
                    <field name="config_id"/>
                    <field name="create_date"/>
                    <field name="retry_count"/>
                    <field name="next_retry" optional="show"/>
                    <field name="priority" optional="show"/>
                    <field name="state" widget="badge" decoration-success="state == 'synced'" decoration-danger="state == 'failed'" decoration-warning="state == 'pending'"/>
                    <button name="action_retry_sync" type="object" string="Retry" icon="fa-refresh" invisible="state in ('syncing', 'synced')"/>
                </list>
            </field>
        </record>

        <!-- POS Offline Queue Form View -->
        <record id="view_pos_offline_queue_form" model="ir.ui.view">
            <field name="name">l10n_cr.pos.offline.queue.form</field>
            <field name="model">l10n_cr.pos.offline.queue</field>
            <field name="arch" type="xml">
                <form string="Queue Entry">
                    <header>
                        <button name="action_retry_sync" string="Retry Sync" type="object" class="btn-primary" invisible="state in ('syncing', 'synced')"/>
                        <button name="action_reset" string="Reset" type="object" class="btn-secondary" invisible="state != 'failed'"/>
                        <button name="action_mark_synced" string="Mark as Synced" type="object" class="btn-secondary" confirm="Are you sure? This will skip submission to Hacienda." invisible="state == 'synced'"/>
                        <button name="action_delete_queue_entry" string="Delete" type="object" class="btn-danger" confirm="Are you sure you want to delete this queue entry?" invisible="state == 'syncing'"/>
                        <field name="state" widget="statusbar" statusbar_visible="pending,syncing,synced"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="pos_order_id"/>
                                <field name="einvoice_document_id"/>
                                <field name="session_id"/>
                                <field name="config_id"/>
                            </group>
                            <group>
                                <field name="priority"/>
                                <field name="retry_count"/>
                                <field name="last_retry"/>
                                <field name="next_retry"/>
                                <field name="create_date"/>
                            </group>
                        </group>
                        <group string="Error Information" invisible="not last_error">
                            <field name="last_error" nolabel="1" readonly="1"/>
                        </group>
                        <group string="Cached XML Data" invisible="not xml_data">
                            <field name="xml_data" filename="cached_xml.xml"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- POS Offline Queue Search View -->
        <record id="view_pos_offline_queue_search" model="ir.ui.view">
            <field name="name">l10n_cr.pos.offline.queue.search</field>
            <field name="model">l10n_cr.pos.offline.queue</field>
            <field name="arch" type="xml">
                <search string="Offline Queue">
                    <field name="name"/>
                    <field name="pos_order_id"/>
                    <field name="config_id"/>
                    <filter name="pending" string="Pending" domain="[('state', '=', 'pending')]"/>
                    <filter name="syncing" string="Syncing" domain="[('state', '=', 'syncing')]"/>
                    <filter name="failed" string="Failed" domain="[('state', '=', 'failed')]"/>
                    <filter name="synced" string="Synced" domain="[('state', '=', 'synced')]"/>
                    <separator/>
                    <filter name="ready_to_retry" string="Ready to Retry" domain="[('state', '=', 'pending'), '|', ('next_retry', '&lt;=', context_today()), ('next_retry', '=', False)]"/>
                        <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                        <filter name="group_config" string="POS Terminal" context="{'group_by': 'config_id'}"/>
                        <filter name="group_priority" string="Priority" context="{'group_by': 'priority'}"/>
                </search>
            </field>
        </record>

        <!-- POS Offline Queue Action -->
        <record id="action_pos_offline_queue" model="ir.actions.act_window">
            <field name="name">POS Offline Queue</field>
            <field name="res_model">l10n_cr.pos.offline.queue</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_pending': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No invoices in offline queue
                </p>
                <p>
                    When the POS cannot connect to Hacienda, electronic invoices
                    are queued here for automatic synchronization when the connection is restored.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_pos_offline_queue"
                  name="POS Offline Queue"
                  parent="menu_hacienda_root"
                  action="action_pos_offline_queue"
                  sequence="60"/>

    </data>
</odoo>
