<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- POS Order Form View Extension -->
        <record id="view_pos_order_form_einvoice" model="ir.ui.view">
            <field name="name">pos.order.form.einvoice</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">

                <!-- Add smart button for e-invoice -->
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_l10n_cr_resend_email"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-envelope"
                            invisible="not l10n_cr_einvoice_document_id"
                            string="Resend Email"/>
                    <button name="action_l10n_cr_check_status"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-refresh"
                            invisible="not l10n_cr_einvoice_document_id"
                            string="Check Status"/>
                </xpath>

                <!-- Add E-Invoice information group -->
                <xpath expr="//group[@name='general_info']" position="after">
                    <group name="einvoice_info" string="Electronic Invoice" invisible="not l10n_cr_is_einvoice">
                        <group>
                            <field name="l10n_cr_is_einvoice" invisible="1"/>
                            <field name="l10n_cr_einvoice_document_id" readonly="1"/>
                            <field name="l10n_cr_hacienda_status" widget="badge"
                                   decoration-success="l10n_cr_hacienda_status == 'accepted'"
                                   decoration-danger="l10n_cr_hacienda_status == 'rejected'"
                                   decoration-warning="l10n_cr_hacienda_status == 'pending'"
                                   decoration-info="l10n_cr_hacienda_status == 'queued'"/>
                            <field name="l10n_cr_consecutive" readonly="1"/>
                            <field name="l10n_cr_clave" readonly="1"/>
                            <field name="l10n_cr_offline_queue" widget="boolean_toggle" readonly="1"/>
                        </group>
                        <group>
                            <!-- field l10n_cr_customer_id_type removed: not defined in model -->
                            <field name="l10n_cr_customer_id_number"/>
                            <field name="l10n_cr_customer_name"/>
                            <field name="l10n_cr_customer_email"/>
                        </group>
                    </group>
                </xpath>

                <!-- Add QR Code field -->
                <xpath expr="//group[@name='einvoice_info']" position="after">
                    <group name="einvoice_qr" string="QR Code" invisible="not l10n_cr_qr_code">
                        <field name="l10n_cr_qr_code" widget="image" options="{'size': [200, 200]}"/>
                    </group>
                </xpath>

                <!-- Add error message field -->
                <xpath expr="//group[@name='einvoice_qr']" position="after">
                    <group name="einvoice_error" string="Error Information" invisible="not l10n_cr_hacienda_error">
                        <field name="l10n_cr_hacienda_error" readonly="1" nolabel="1"/>
                        <button name="action_l10n_cr_resubmit_hacienda"
                                string="Resubmit to Hacienda"
                                type="object"
                                class="btn-primary"
                                invisible="l10n_cr_hacienda_status == 'accepted' or not l10n_cr_einvoice_document_id"/>
                    </group>
                </xpath>

            </field>
        </record>

        <!-- POS Order Tree View Extension -->
        <record id="view_pos_order_tree_einvoice" model="ir.ui.view">
            <field name="name">pos.order.tree.einvoice</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="l10n_cr_hacienda_status" optional="show" widget="badge"
                           decoration-success="l10n_cr_hacienda_status == 'accepted'"
                           decoration-danger="l10n_cr_hacienda_status == 'rejected'"
                           decoration-warning="l10n_cr_hacienda_status == 'pending'"
                           decoration-info="l10n_cr_hacienda_status == 'queued'"/>
                    <field name="l10n_cr_consecutive" optional="hide"/>
                    <field name="l10n_cr_offline_queue" optional="hide" widget="boolean_toggle"/>
                </xpath>
            </field>
        </record>

        <!-- POS Order Search View Extension -->
        <record id="view_pos_order_search_einvoice" model="ir.ui.view">
            <field name="name">pos.order.search.einvoice</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <filter name="hacienda_accepted" string="Accepted by Hacienda"
                            domain="[('l10n_cr_hacienda_status', '=', 'accepted')]"/>
                    <filter name="hacienda_pending" string="Pending Approval"
                            domain="[('l10n_cr_hacienda_status', '=', 'pending')]"/>
                    <filter name="hacienda_rejected" string="Rejected"
                            domain="[('l10n_cr_hacienda_status', '=', 'rejected')]"/>
                    <filter name="offline_queue" string="In Offline Queue"
                            domain="[('l10n_cr_offline_queue', '=', True)]"/>
                        <filter name="group_hacienda_status" string="Hacienda Status"
                                context="{'group_by': 'l10n_cr_hacienda_status'}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
