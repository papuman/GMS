<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Payment Method List View -->
    <record id="view_payment_method_list" model="ir.ui.view">
        <field name="name">l10n_cr.payment.method.list</field>
        <field name="model">l10n_cr.payment.method</field>
        <field name="arch" type="xml">
            <list string="Payment Methods">
                <field name="code"/>
                <field name="name"/>
                <field name="description"/>
                <field name="requires_transaction_id" widget="boolean_toggle"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Payment Method Form View -->
    <record id="view_payment_method_form" model="ir.ui.view">
        <field name="name">l10n_cr.payment.method.form</field>
        <field name="model">l10n_cr.payment.method</field>
        <field name="arch" type="xml">
            <form string="Payment Method">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    </div>

                    <group>
                        <group>
                            <field name="code" readonly="1"/>
                            <field name="name"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="requires_transaction_id" widget="boolean_toggle"/>
                            <field name="icon"/>
                            <field name="badge_color"/>
                        </group>
                    </group>

                    <group>
                        <field name="description" placeholder="Description of when to use this payment method..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Payment Method Search View -->
    <record id="view_payment_method_search" model="ir.ui.view">
        <field name="name">l10n_cr.payment.method.search</field>
        <field name="model">l10n_cr.payment.method</field>
        <field name="arch" type="xml">
            <search string="Payment Methods">
                <field name="name"/>
                <field name="code"/>
                <filter string="Active" name="filter_active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="filter_inactive" domain="[('active', '=', False)]"/>
                <filter string="Requires Transaction ID" name="filter_requires_transaction" domain="[('requires_transaction_id', '=', True)]"/>
            </search>
        </field>
    </record>

    <!-- Payment Method Action -->
    <record id="action_payment_method" model="ir.actions.act_window">
        <field name="name">Payment Methods</field>
        <field name="res_model">l10n_cr.payment.method</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No payment methods found
            </p>
            <p>
                Payment methods are predefined by Hacienda and loaded during module installation.
                You can activate/deactivate methods as needed for your business.
            </p>
        </field>
    </record>

</odoo>
