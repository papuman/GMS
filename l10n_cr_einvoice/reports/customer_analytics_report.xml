<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Customer Analytics Report Template -->
    <template id="report_customer_analytics">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Análisis de Clientes</h2>

                    <div class="row mt16 mb16">
                        <div class="col-6">
                            <p><strong>Período:</strong> <span t-esc="data['date_from']"/> - <span t-esc="data['date_to']"/></p>
                        </div>
                        <div class="col-6 text-right">
                            <p><strong>Total Clientes:</strong> <span t-esc="data['total_customers_analyzed']"/></p>
                        </div>
                    </div>

                    <h4 class="mt32">Top Clientes por Ingresos</h4>
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr class="table-primary">
                                <th>#</th>
                                <th>Cliente</th>
                                <th>Identificación</th>
                                <th class="text-right">Facturas</th>
                                <th class="text-right">Ingresos Brutos</th>
                                <th class="text-right">Créditos</th>
                                <th class="text-right">Ingresos Netos</th>
                                <th class="text-right">Ticket Promedio</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="data['top_customers']" t-as="customer">
                                <td><span t-esc="customer_index + 1"/></td>
                                <td><span t-esc="customer['customer_name']"/></td>
                                <td><span t-esc="customer['customer_vat']"/></td>
                                <td class="text-right"><span t-esc="customer['invoice_count']"/></td>
                                <td class="text-right">₡<span t-esc="'{:,.2f}'.format(customer['total_revenue'])"/></td>
                                <td class="text-right">₡<span t-esc="'{:,.2f}'.format(customer['total_credits'])"/></td>
                                <td class="text-right"><strong>₡<span t-esc="'{:,.2f}'.format(customer['net_revenue'])"/></strong></td>
                                <td class="text-right">₡<span t-esc="'{:,.2f}'.format(customer['avg_order_value'])"/></td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row mt32">
                        <div class="col-12">
                            <h4>Métricas Adicionales</h4>
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr class="table-primary">
                                        <th>Cliente</th>
                                        <th class="text-right">Primera Compra</th>
                                        <th class="text-right">Última Compra</th>
                                        <th class="text-right">Días Activos</th>
                                        <th class="text-right">Frecuencia (días)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="data['top_customers']" t-as="customer">
                                        <td><span t-esc="customer['customer_name']"/></td>
                                        <td class="text-right"><span t-esc="customer['first_invoice_date']"/></td>
                                        <td class="text-right"><span t-esc="customer['last_invoice_date']"/></td>
                                        <td class="text-right"><span t-esc="customer['active_days']"/></td>
                                        <td class="text-right"><span t-esc="'{:.1f}'.format(customer['purchase_frequency_days'])"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="row mt32">
                        <div class="col-12">
                            <p class="text-muted">Reporte generado el <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/></p>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_report_customer_analytics" model="ir.actions.report">
        <field name="name">Análisis de Clientes</field>
        <field name="model">l10n_cr.einvoice.document</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_cr_einvoice.report_customer_analytics</field>
        <field name="report_file">l10n_cr_einvoice.report_customer_analytics</field>
        <field name="binding_model_id" ref="model_l10n_cr_einvoice_document"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
