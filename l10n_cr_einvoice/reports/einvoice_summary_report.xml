<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Invoice Summary Report Template -->
    <template id="report_einvoice_summary">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Resumen de Facturación Electrónica</h2>

                    <div class="row mt16 mb16">
                        <div class="col-6">
                            <p><strong>Período:</strong> <span t-esc="data['date_from']"/> - <span t-esc="data['date_to']"/></p>
                        </div>
                        <div class="col-6 text-right">
                            <p><strong>Total Documentos:</strong> <span t-esc="data['total_documents']"/></p>
                            <p><strong>Total Ingresos:</strong> ₡<span t-esc="'{:,.2f}'.format(data['total_revenue'])"/></p>
                        </div>
                    </div>

                    <h4 class="mt32">Resumen por Tipo de Documento</h4>
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr class="table-primary">
                                <th>Tipo</th>
                                <th class="text-right">Cantidad</th>
                                <th class="text-right">Subtotal</th>
                                <th class="text-right">Impuesto</th>
                                <th class="text-right">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="data['summary_by_type']" t-as="item">
                                <td><span t-esc="item['document_type_name']"/></td>
                                <td class="text-right"><span t-esc="item['count']"/></td>
                                <td class="text-right">₡<span t-esc="'{:,.2f}'.format(item['untaxed_amount'])"/></td>
                                <td class="text-right">₡<span t-esc="'{:,.2f}'.format(item['tax_amount'])"/></td>
                                <td class="text-right"><strong>₡<span t-esc="'{:,.2f}'.format(item['total_amount'])"/></strong></td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row mt32">
                        <div class="col-12">
                            <p class="text-muted">Reporte generado el <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/></p>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_report_einvoice_summary" model="ir.actions.report">
        <field name="name">Resumen de Facturación</field>
        <field name="model">l10n_cr.einvoice.document</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_cr_einvoice.report_einvoice_summary</field>
        <field name="report_file">l10n_cr_einvoice.report_einvoice_summary</field>
        <field name="binding_model_id" ref="model_l10n_cr_einvoice_document"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
