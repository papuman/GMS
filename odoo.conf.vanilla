[options]
; Minimal vanilla Odoo configuration for Docker deployment

; Database connection (required for Docker)
db_host = db
db_port = 5432
db_user = odoo
db_password = odoo

; Optional: Allow database management from web interface
list_db = True

; Optional: Data directory
data_dir = /var/lib/odoo

; Optional: Addons path (only if you have custom modules)
addons_path = /mnt/extra-addons,/usr/lib/python3/dist-packages/odoo/addons
