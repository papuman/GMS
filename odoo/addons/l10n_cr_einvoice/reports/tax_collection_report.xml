<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tax Collection Report Template -->
    <template id="report_tax_collection">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Reporte de Recaudación de Impuestos</h2>

                    <div class="row mt16 mb16">
                        <div class="col-6">
                            <p><strong>Período:</strong> <span t-esc="data['date_from']"/> - <span t-esc="data['date_to']"/></p>
                            <p><strong>Total Documentos:</strong> <span t-esc="data['document_count']"/></p>
                        </div>
                        <div class="col-6 text-right">
                            <p><strong>Base Imponible:</strong> ₡<span t-esc="'{:,.2f}'.format(data['total_taxable_base'])"/></p>
                            <p><strong>Impuesto Total:</strong> ₡<span t-esc="'{:,.2f}'.format(data['total_tax_collected'])"/></p>
                            <p><strong>Ingresos Totales:</strong> ₡<span t-esc="'{:,.2f}'.format(data['total_revenue'])"/></p>
                        </div>
                    </div>

                    <h4 class="mt32">Detalle por Tasa de Impuesto</h4>
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr class="table-primary">
                                <th>Tasa</th>
                                <th>Nombre</th>
                                <th class="text-right">Base Imponible</th>
                                <th class="text-right">Impuesto</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="data['tax_by_rate']" t-as="item">
                                <td><span t-esc="'{:.2f}%'.format(item['tax_rate'])"/></td>
                                <td><span t-esc="item['tax_name']"/></td>
                                <td class="text-right">₡<span t-esc="'{:,.2f}'.format(item['taxable_base'])"/></td>
                                <td class="text-right"><strong>₡<span t-esc="'{:,.2f}'.format(item['tax_amount'])"/></strong></td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr class="table-secondary">
                                <td colspan="2" class="text-right"><strong>TOTAL:</strong></td>
                                <td class="text-right"><strong>₡<span t-esc="'{:,.2f}'.format(data['total_taxable_base'])"/></strong></td>
                                <td class="text-right"><strong>₡<span t-esc="'{:,.2f}'.format(data['total_tax_collected'])"/></strong></td>
                            </tr>
                        </tfoot>
                    </table>

                    <div class="row mt32">
                        <div class="col-12">
                            <p class="text-muted">Reporte generado el <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/></p>
                            <p class="text-muted">Este reporte incluye Facturas Electrónicas (FE), Tiquetes Electrónicos (TE) y Notas de Débito (ND). Las Notas de Crédito (NC) están excluidas.</p>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_report_tax_collection" model="ir.actions.report">
        <field name="name">Recaudación de Impuestos</field>
        <field name="model">l10n_cr.einvoice.document</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_cr_einvoice.report_tax_collection</field>
        <field name="report_file">l10n_cr_einvoice.report_tax_collection</field>
        <field name="binding_model_id" ref="model_l10n_cr_einvoice_document"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
