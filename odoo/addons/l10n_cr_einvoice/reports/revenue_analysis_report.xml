<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Revenue Analysis Report Template -->
    <template id="report_revenue_analysis">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Análisis de Ingresos</h2>

                    <div class="row mt16 mb16">
                        <div class="col-6">
                            <p><strong>Período:</strong> <span t-esc="data['date_from']"/> - <span t-esc="data['date_to']"/></p>
                            <p><strong>Agrupación:</strong> <span t-esc="data['period'].capitalize()"/></p>
                        </div>
                        <div class="col-6 text-right">
                            <p><strong>Total Documentos:</strong> <span t-esc="data['total_documents']"/></p>
                            <p><strong>Ingresos Totales:</strong> ₡<span t-esc="'{:,.2f}'.format(data['total_revenue'])"/></p>
                        </div>
                    </div>

                    <h4 class="mt32">Ingresos por Período</h4>
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr class="table-primary">
                                <th>Período</th>
                                <th class="text-right">FE</th>
                                <th class="text-right">TE</th>
                                <th class="text-right">NC</th>
                                <th class="text-right">ND</th>
                                <th class="text-right">Total</th>
                                <th class="text-right">Docs</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="data['revenue_by_period']" t-as="item">
                                <td><span t-esc="item['period']"/></td>
                                <td class="text-right">₡<span t-esc="'{:,.2f}'.format(item['fe_revenue'])"/></td>
                                <td class="text-right">₡<span t-esc="'{:,.2f}'.format(item['te_revenue'])"/></td>
                                <td class="text-right">₡<span t-esc="'{:,.2f}'.format(item['nc_revenue'])"/></td>
                                <td class="text-right">₡<span t-esc="'{:,.2f}'.format(item['nd_revenue'])"/></td>
                                <td class="text-right"><strong>₡<span t-esc="'{:,.2f}'.format(item['total_revenue'])"/></strong></td>
                                <td class="text-right"><span t-esc="item['document_count']"/></td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr class="table-secondary">
                                <td colspan="5" class="text-right"><strong>TOTAL:</strong></td>
                                <td class="text-right"><strong>₡<span t-esc="'{:,.2f}'.format(data['total_revenue'])"/></strong></td>
                                <td class="text-right"><strong><span t-esc="data['total_documents']"/></strong></td>
                            </tr>
                        </tfoot>
                    </table>

                    <div class="row mt32">
                        <div class="col-12">
                            <p class="text-muted">Reporte generado el <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/></p>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_report_revenue_analysis" model="ir.actions.report">
        <field name="name">Análisis de Ingresos</field>
        <field name="model">l10n_cr.einvoice.document</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_cr_einvoice.report_revenue_analysis</field>
        <field name="report_file">l10n_cr_einvoice.report_revenue_analysis</field>
        <field name="binding_model_id" ref="model_l10n_cr_einvoice_document"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
