<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tax Report Period Tree View -->
    <record id="view_tax_report_period_list" model="ir.ui.view">
        <field name="name">l10n_cr.tax.report.period.list</field>
        <field name="model">l10n_cr.tax.report.period</field>
        <field name="arch" type="xml">
            <list string="Tax Report Periods" decoration-success="state=='accepted'" decoration-info="state=='ready'" decoration-warning="state=='submitted'" decoration-danger="state=='overdue'">
                <field name="name"/>
                <field name="report_type"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="deadline" decoration-danger="deadline &lt; context_today() and state in ['draft', 'ready']"/>
                <field name="state" widget="badge" decoration-success="state=='accepted'" decoration-info="state=='ready'" decoration-warning="state=='submitted'" decoration-muted="state=='draft'" decoration-danger="state=='overdue'"/>
            </list>
        </field>
    </record>

    <!-- Tax Report Period Form View -->
    <record id="view_tax_report_period_form" model="ir.ui.view">
        <field name="name">l10n_cr.tax.report.period.form</field>
        <field name="model">l10n_cr.tax.report.period</field>
        <field name="arch" type="xml">
            <form string="Tax Report Period">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,ready,submitted,accepted"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_reports" type="object" class="oe_stat_button" icon="fa-file-text-o">
                            <field name="report_count" widget="statinfo" string="Reports"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="report_type" required="1"/>
                            <field name="year" invisible="report_type != 'd150'"/>
                            <field name="month" invisible="report_type != 'd150'"/>
                        </group>
                        <group>
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                            <field name="deadline" required="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Optional notes about this tax period..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tax Report Period Search View -->
    <record id="view_tax_report_period_search" model="ir.ui.view">
        <field name="name">l10n_cr.tax.report.period.search</field>
        <field name="model">l10n_cr.tax.report.period</field>
        <field name="arch" type="xml">
            <search string="Tax Report Periods">
                <field name="name"/>
                <field name="year"/>
                <field name="month"/>
                <separator/>
                <filter string="D-150 (VAT)" name="filter_d150" domain="[('report_type', '=', 'd150')]"/>
                <filter string="D-101 (Income Tax)" name="filter_d101" domain="[('report_type', '=', 'd101')]"/>
                <filter string="D-151 (Informative)" name="filter_d151" domain="[('report_type', '=', 'd151')]"/>
                <separator/>
                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Ready" name="filter_ready" domain="[('state', '=', 'ready')]"/>
                <filter string="Submitted" name="filter_submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Accepted" name="filter_accepted" domain="[('state', '=', 'accepted')]"/>
                <filter string="Overdue" name="filter_overdue" domain="[('state', '=', 'overdue')]"/>
                <separator/>
                <filter string="Current Year" name="filter_current_year" domain="[('year', '=', context_today().year)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Report Type" name="group_report_type" context="{'group_by': 'report_type'}"/>
                    <filter string="Year" name="group_year" context="{'group_by': 'year'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tax Report Period Action -->
    <record id="action_tax_report_period" model="ir.actions.act_window">
        <field name="name">Tax Report Periods</field>
        <field name="res_model">l10n_cr.tax.report.period</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_current_year': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new tax report period
            </p>
            <p>
                Tax report periods define the timeframes for monthly VAT declarations (D-150),
                annual income tax (D-101), and annual informative declarations (D-151).
            </p>
        </field>
    </record>

</odoo>
