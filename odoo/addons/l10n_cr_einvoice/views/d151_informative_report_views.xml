<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- D-151 Informative Report Tree View -->
    <record id="view_d151_report_list" model="ir.ui.view">
        <field name="name">l10n_cr.d151.report.list</field>
        <field name="model">l10n_cr.d151.report</field>
        <field name="arch" type="xml">
            <list string="D-151 Informative Reports" decoration-success="state=='accepted'" decoration-info="state=='ready'" decoration-warning="state=='submitted'" decoration-danger="state=='error'">
                <field name="name"/>
                <field name="period_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="total_customers_reported" sum="Total Customers"/>
                <field name="total_suppliers_reported" sum="Total Suppliers"/>
                <field name="total_sales_amount" sum="Total Sales" widget="monetary"/>
                <field name="total_purchases_amount" sum="Total Purchases" widget="monetary"/>
                <field name="state" widget="badge" decoration-success="state=='accepted'" decoration-info="state=='ready'" decoration-warning="state=='submitted'" decoration-muted="state=='draft'" decoration-danger="state=='error'"/>
            </list>
        </field>
    </record>

    <!-- D-151 Informative Report Form View -->
    <record id="view_d151_report_form" model="ir.ui.view">
        <field name="name">l10n_cr.d151.report.form</field>
        <field name="model">l10n_cr.d151.report</field>
        <field name="arch" type="xml">
            <form string="D-151 Informative Report">
                <header>
                    <button name="action_calculate" string="Calculate" type="object" class="oe_highlight" invisible="state != 'draft'" confirm="This will calculate all customer/supplier transactions above threshold. Continue?"/>
                    <button name="action_generate_xml" string="Generate XML" type="object" class="oe_highlight" invisible="state not in ['calculated', 'ready']"/>
                    <button name="action_sign_xml" string="Sign XML" type="object" class="oe_highlight" invisible="state != 'ready' or not xml_content"/>
                    <button name="action_submit_to_hacienda" string="Submit to Hacienda" type="object" class="oe_highlight" invisible="state != 'ready' or not xml_signed" confirm="Submit this informative declaration to Hacienda?"/>
                    <button name="action_check_status" string="Check Status" type="object" invisible="state not in ['submitted']"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="state in ['submitted', 'accepted']" confirm="This will reset the report to draft state. Continue?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,calculated,ready,submitted,accepted"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Smart buttons -->
                        <button name="%(action_d151_customer_line)d" type="action" class="oe_stat_button" icon="fa-users" context="{'search_default_report_id': active_id}">
                            <field name="total_customers_reported" widget="statinfo" string="Customers"/>
                        </button>
                        <button name="%(action_d151_supplier_line)d" type="action" class="oe_stat_button" icon="fa-shopping-cart" context="{'search_default_report_id': active_id}">
                            <field name="total_suppliers_reported" widget="statinfo" string="Suppliers"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="period_id" required="1" readonly="state != 'draft'"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="threshold_amount" readonly="state != 'draft'"/>
                            <field name="specific_expense_threshold" readonly="state != 'draft'"/>
                        </group>
                    </group>

                    <group>
                        <group string="Summary Statistics">
                            <field name="total_customers_reported" readonly="1"/>
                            <field name="total_sales_amount" readonly="1" widget="monetary"/>
                        </group>
                        <group string="">
                            <field name="total_suppliers_reported" readonly="1"/>
                            <field name="total_purchases_amount" readonly="1" widget="monetary"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Customer Transactions" name="customers">
                            <field name="customer_line_ids" readonly="state != 'calculated'">
                                <list string="Customer Lines" editable="bottom">
                                    <field name="partner_id" readonly="1"/>
                                    <field name="partner_vat" readonly="1"/>
                                    <field name="partner_name" readonly="1"/>
                                    <field name="total_amount" sum="Total Sales" readonly="1" widget="monetary"/>
                                    <field name="transaction_count" sum="Total Invoices" readonly="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page>

                        <page string="Supplier Transactions" name="suppliers">
                            <field name="supplier_line_ids" readonly="state != 'calculated'">
                                <list string="Supplier Lines" editable="bottom">
                                    <field name="partner_id" readonly="1"/>
                                    <field name="partner_vat" readonly="1"/>
                                    <field name="partner_name" readonly="1"/>
                                    <field name="total_amount" sum="Total Purchases" readonly="1" widget="monetary"/>
                                    <field name="transaction_count" sum="Total Bills" readonly="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page>

                        <page string="Specific Expenses" name="expenses">
                            <p class="text-muted">
                                Specific expenses require reporting for transactions above ₡50,000 per year:
                                Professional Services (SP), Rentals (A), Commissions (M), Interest (I)
                            </p>
                            <field name="expense_line_ids" readonly="state != 'calculated'">
                                <list string="Expense Lines" editable="bottom">
                                    <field name="partner_id" readonly="1"/>
                                    <field name="partner_vat" readonly="1"/>
                                    <field name="partner_name" readonly="1"/>
                                    <field name="expense_type" readonly="1"/>
                                    <field name="total_amount" sum="Total Amount" readonly="1" widget="monetary"/>
                                    <field name="transaction_count" sum="Total Transactions" readonly="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page>

                        <page string="Hacienda Submission" name="submission" invisible="state in ['draft', 'calculated']">
                            <group>
                                <group>
                                    <field name="submission_key" readonly="1"/>
                                    <field name="submission_date" readonly="1"/>
                                </group>
                                <group>
                                    <field name="acceptance_date" readonly="1"/>
                                    <field name="hacienda_message" readonly="1"/>
                                </group>
                            </group>
                            <group string="XML Content">
                                <field name="xml_content" widget="ace" options="{'mode': 'xml'}" readonly="1"/>
                            </group>
                            <group string="Signed XML" invisible="not xml_signed">
                                <field name="xml_signed" widget="ace" options="{'mode': 'xml'}" readonly="1"/>
                            </group>
                        </page>

                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Internal notes about this informative declaration..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- D-151 Informative Report Search View -->
    <record id="view_d151_report_search" model="ir.ui.view">
        <field name="name">l10n_cr.d151.report.search</field>
        <field name="model">l10n_cr.d151.report</field>
        <field name="arch" type="xml">
            <search string="D-151 Informative Reports">
                <field name="name"/>
                <field name="period_id"/>
                <separator/>
                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Calculated" name="filter_calculated" domain="[('state', '=', 'calculated')]"/>
                <filter string="Ready" name="filter_ready" domain="[('state', '=', 'ready')]"/>
                <filter string="Submitted" name="filter_submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Accepted" name="filter_accepted" domain="[('state', '=', 'accepted')]"/>
                <filter string="Errors" name="filter_error" domain="[('state', '=', 'error')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Period" name="group_period" context="{'group_by': 'period_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- D-151 Customer Line Action (for smart button) -->
    <record id="action_d151_customer_line" model="ir.actions.act_window">
        <field name="name">Customer Transactions</field>
        <field name="res_model">l10n_cr.d151.customer.line</field>
        <field name="view_mode">list</field>
        <field name="domain">[('report_id', '=', active_id)]</field>
    </record>

    <!-- D-151 Supplier Line Action (for smart button) -->
    <record id="action_d151_supplier_line" model="ir.actions.act_window">
        <field name="name">Supplier Transactions</field>
        <field name="res_model">l10n_cr.d151.supplier.line</field>
        <field name="view_mode">list</field>
        <field name="domain">[('report_id', '=', active_id)]</field>
    </record>

    <!-- D-151 Informative Report Action -->
    <record id="action_d151_report" model="ir.actions.act_window">
        <field name="name">D-151 Informative Declarations</field>
        <field name="res_model">l10n_cr.d151.report</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new D-151 Informative Declaration
            </p>
            <p>
                The D-151 annual informative declaration reports all customers and suppliers
                with transactions above ₡2,500,000, and specific expenses above ₡50,000, then submits to Hacienda.
            </p>
        </field>
    </record>

</odoo>
