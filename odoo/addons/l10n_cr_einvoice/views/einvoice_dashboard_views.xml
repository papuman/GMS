<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Dashboard: E-Invoice Statistics -->
    <record id="view_einvoice_dashboard" model="ir.ui.view">
        <field name="name">l10n_cr.einvoice.dashboard</field>
        <field name="model">l10n_cr.einvoice.document</field>
        <field name="arch" type="xml">
            <dashboard string="E-Invoice Dashboard">
                <view type="graph"/>
                <view type="pivot"/>
                <group col="4">
                    <!-- KPI Cards -->
                    <group string="This Month" colspan="4">
                        <div class="o_kanban_card_content">
                            <div class="row">
                                <div class="col-3">
                                    <a type="action" name="%(action_einvoice_document)d" context="{'search_default_filter_accepted': 1, 'search_default_filter_this_month': 1}">
                                        <div class="o_kanban_primary_left">
                                            <span class="o_value"><field name="count_accepted" widget="statinfo"/></span>
                                            <span class="o_label">Accepted</span>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-3">
                                    <a type="action" name="%(action_einvoice_document)d" context="{'search_default_filter_submitted': 1, 'search_default_filter_this_month': 1}">
                                        <div class="o_kanban_primary_left">
                                            <span class="o_value"><field name="count_submitted" widget="statinfo"/></span>
                                            <span class="o_label">Submitted</span>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-3">
                                    <a type="action" name="%(action_einvoice_document)d" context="{'search_default_filter_rejected': 1, 'search_default_filter_this_month': 1}">
                                        <div class="o_kanban_primary_left">
                                            <span class="o_value text-danger"><field name="count_rejected" widget="statinfo"/></span>
                                            <span class="o_label">Rejected</span>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-3">
                                    <a type="action" name="%(action_einvoice_document)d" context="{'search_default_filter_error': 1, 'search_default_filter_this_month': 1}">
                                        <div class="o_kanban_primary_left">
                                            <span class="o_value text-warning"><field name="count_error" widget="statinfo"/></span>
                                            <span class="o_label">Errors</span>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </group>

                    <!-- Charts -->
                    <group string="Status Distribution" colspan="2">
                        <graph type="pie" sample="1">
                            <field name="state"/>
                        </graph>
                    </group>

                    <group string="Document Types" colspan="2">
                        <graph type="pie" sample="1">
                            <field name="document_type"/>
                        </graph>
                    </group>

                    <group string="Monthly Trend" colspan="4">
                        <graph type="line" sample="1">
                            <field name="invoice_date" interval="month"/>
                            <field name="state" type="row"/>
                        </graph>
                    </group>

                    <!-- Pivot Table -->
                    <group string="Detailed Analysis" colspan="4">
                        <pivot sample="1">
                            <field name="state" type="row"/>
                            <field name="document_type" type="col"/>
                            <field name="amount_total" type="measure"/>
                        </pivot>
                    </group>
                </group>
            </dashboard>
        </field>
    </record>

    <!-- E-Invoice Pivot View -->
    <record id="view_einvoice_pivot" model="ir.ui.view">
        <field name="name">l10n_cr.einvoice.document.pivot</field>
        <field name="model">l10n_cr.einvoice.document</field>
        <field name="arch" type="xml">
            <pivot string="E-Invoice Analysis" sample="1">
                <field name="state" type="row"/>
                <field name="document_type" type="col"/>
                <field name="amount_total" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- E-Invoice Graph View -->
    <record id="view_einvoice_graph" model="ir.ui.view">
        <field name="name">l10n_cr.einvoice.document.graph</field>
        <field name="model">l10n_cr.einvoice.document</field>
        <field name="arch" type="xml">
            <graph string="E-Invoice Statistics" type="bar" sample="1">
                <field name="state" type="row"/>
                <field name="amount_total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action: E-Invoice Dashboard -->
    <record id="action_einvoice_dashboard" model="ir.actions.act_window">
        <field name="name">E-Invoice Dashboard</field>
        <field name="res_model">l10n_cr.einvoice.document</field>
        <field name="view_mode">graph,pivot</field>
        <field name="context">{'search_default_filter_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No electronic invoices yet
            </p>
            <p>
                Start by posting invoices for Costa Rican customers to generate electronic invoices.
            </p>
        </field>
    </record>

    <!-- Update Main Dashboard Menu -->
    <record id="menu_hacienda_dashboard" model="ir.ui.menu">
        <field name="action" ref="action_einvoice_dashboard"/>
    </record>

</odoo>
