<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <record id="action_view_invoice_from_einvoice" model="ir.actions.act_window">
        <field name="name">Invoice</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">form</field>
        <field name="domain">[('id', '=', active_id)]</field>
        <field name="context">{'default_move_id': active_id}</field>
    </record>

    
    <record id="view_einvoice_document_list" model="ir.ui.view">
        <field name="name">l10n_cr.einvoice.document.list</field>
        <field name="model">l10n_cr.einvoice.document</field>
        <field name="arch" type="xml">
            <list string="Electronic Invoices" decoration-muted="state=='draft'" decoration-info="state=='generated'" decoration-primary="state=='signed'" decoration-warning="state=='submitted'" decoration-success="state=='accepted'" decoration-danger="state in ('rejected', 'error')">
                <field name="name" string="Document #" />
                <field name="clave" optional="show" />
                <field name="document_type" optional="show" />
                <field name="move_id" string="Invoice" />
                <field name="partner_id" string="Customer" />
                <field name="invoice_date" optional="show" />
                <field name="amount_total" widget="monetary" options="{'currency_field': 'currency_id'}" />
                <field name="currency_id" invisible="1" />
                <field name="state" widget="badge" decoration-muted="state=='draft'" decoration-info="state=='generated'" decoration-primary="state=='signed'" decoration-warning="state=='submitted'" decoration-success="state=='accepted'" decoration-danger="state in ('rejected', 'error')" />
                <field name="hacienda_submission_date" optional="hide" />
                <field name="hacienda_acceptance_date" optional="hide" />
                <field name="email_sent" widget="boolean_toggle" optional="show" />
                <field name="company_id" groups="base.group_multi_company" optional="show" />
            </list>
        </field>
    </record>

    
    <record id="view_einvoice_document_form" model="ir.ui.view">
        <field name="name">l10n_cr.einvoice.document.form</field>
        <field name="model">l10n_cr.einvoice.document</field>
        <field name="arch" type="xml">
            <form string="Electronic Invoice">
                <header>
                    
                    <button name="action_generate_xml" string="Generate XML" type="object" class="oe_highlight" invisible="state not in ['draft', 'error']" />
                    <button name="action_sign_xml" string="Sign XML" type="object" class="oe_highlight" invisible="state != 'generated'" />
                    <button name="action_submit_to_hacienda" string="Submit to Hacienda" type="object" class="oe_highlight" invisible="state != 'signed'" />
                    <button name="action_check_status" string="Check Status" type="object" invisible="state != 'submitted'" />

                    
                    <button name="action_retry" type="object" string="Retry" class="btn-warning" invisible="not retry_button_visible" confirm="Retry the failed operation? This will attempt to continue the e-invoice process from the point of failure." />

                    
                    <button name="action_generate_pdf" string="Generate PDF" type="object" class="oe_highlight" invisible="not xml_content or pdf_attachment_id" />
                    <button name="action_send_email" string="Send Email" type="object" invisible="state != 'accepted' or email_sent" />

                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated,signed,submitted,accepted" statusbar_colors="{&quot;rejected&quot;:&quot;danger&quot;,&quot;error&quot;:&quot;danger&quot;,&quot;generation_error&quot;:&quot;danger&quot;,&quot;signing_error&quot;:&quot;danger&quot;,&quot;submission_error&quot;:&quot;danger&quot;}" />
                </header>

                <sheet>
                    
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_view_invoice_from_einvoice)d" type="action" class="oe_stat_button" icon="fa-file-text-o" context="{'default_move_id': move_id}">
                            <span class="o_stat_text">Invoice</span>
                        </button>
                        <button name="action_download_xml" type="object" class="oe_stat_button" icon="fa-download" invisible="not xml_attachment_id">
                            <span class="o_stat_text">Download XML</span>
                        </button>
                        <button name="action_download_pdf" type="object" class="oe_stat_button" icon="fa-file-pdf-o" invisible="not pdf_attachment_id">
                            <span class="o_stat_text">Download PDF</span>
                        </button>
                        <button name="action_view_hacienda_response" type="object" class="oe_stat_button" icon="fa-server" invisible="not hacienda_response">
                            <span class="o_stat_text">Hacienda Response</span>
                        </button>
                    </div>

                    
                    <widget name="web_ribbon" title="Accepted" bg_color="text-bg-success" invisible="state != 'accepted'" />
                    <widget name="web_ribbon" title="Rejected" bg_color="text-bg-danger" invisible="state != 'rejected'" />
                    <widget name="web_ribbon" title="Error" bg_color="text-bg-warning" invisible="state != 'error'" />

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                    </div>

                    <group>
                        <group name="main_info" string="Document Information">
                            <field name="document_type" widget="badge" decoration-info="document_type == 'FE'" decoration-success="document_type == 'TE'" decoration-warning="document_type == 'NC'" decoration-danger="document_type == 'ND'" />
                            <field name="move_id" readonly="1" invisible="pos_order_id" />
                            <field name="pos_order_id" readonly="1" invisible="move_id" />
                            <field name="partner_id" readonly="1" />
                            <field name="invoice_date" readonly="1" />
                            <field name="amount_total" widget="monetary" options="{'currency_field': 'currency_id'}" />
                            <field name="currency_id" invisible="1" />
                            <field name="company_id" groups="base.group_multi_company" readonly="1" />
                        </group>
                        <group name="hacienda_info" string="Hacienda Information">
                            <field name="clave" readonly="1" widget="CopyClipboardChar" />
                            <field name="hacienda_submission_date" readonly="1" />
                            <field name="hacienda_acceptance_date" readonly="1" />
                            <field name="hacienda_message" readonly="1" />
                            <field name="retry_count" readonly="1" invisible="retry_count == 0" />
                        </group>
                    </group>

                    
                    <div class="alert alert-danger" role="alert" invisible="not error_message">
                        <strong>Error Details:</strong>
                        <field name="error_message" readonly="1" nolabel="1" />
                    </div>

                    <notebook>
                        
                        <page string="XML Content" name="xml_content" groups="base.group_no_one">
                            <group>
                                <field name="xml_content" readonly="1" widget="ace" options="{'mode': 'xml'}" nolabel="1" />
                            </group>
                        </page>

                        
                        <page string="Signed XML" name="signed_xml" invisible="not signed_xml" groups="base.group_no_one">
                            <group>
                                <field name="signed_xml" readonly="1" widget="ace" options="{'mode': 'xml'}" nolabel="1" />
                            </group>
                        </page>

                        
                        <page string="Hacienda Response" name="hacienda_response" invisible="not hacienda_response">
                            <group>
                                <field name="hacienda_response" readonly="1" widget="ace" options="{'mode': 'json'}" nolabel="1" />
                            </group>
                        </page>

                        
                        <page string="Attachments" name="attachments">
                            <group>
                                <field name="xml_attachment_id" readonly="1" />
                                <field name="pdf_attachment_id" readonly="1" />
                            </group>
                        </page>

                        
                        <page string="Email" name="email">
                            <group>
                                <field name="email_sent" widget="boolean_toggle" />
                                <field name="email_sent_date" readonly="1" invisible="not email_sent" />
                            </group>
                        </page>
                    </notebook>
                </sheet>

                
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    
    <record id="view_einvoice_document_search" model="ir.ui.view">
        <field name="name">l10n_cr.einvoice.document.search</field>
        <field name="model">l10n_cr.einvoice.document</field>
        <field name="arch" type="xml">
            <search string="Search Electronic Invoices">
                
                <field name="name" string="Document Number" />
                <field name="clave" string="Hacienda Key" />
                <field name="move_id" string="Invoice" />
                <field name="partner_id" string="Customer" />
                <field name="document_type" />

                
                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]" />
                <filter string="Generated" name="filter_generated" domain="[('state', '=', 'generated')]" />
                <filter string="Signed" name="filter_signed" domain="[('state', '=', 'signed')]" />
                <filter string="Submitted" name="filter_submitted" domain="[('state', '=', 'submitted')]" />
                <filter string="Accepted" name="filter_accepted" domain="[('state', '=', 'accepted')]" />
                <filter string="Rejected" name="filter_rejected" domain="[('state', '=', 'rejected')]" />
                <filter string="Error" name="filter_error" domain="[('state', '=', 'error')]" />

                <separator />

                <filter string="Facturas Electrónicas" name="filter_fe" domain="[('document_type', '=', 'FE')]" />
                <filter string="Tiquetes Electrónicos" name="filter_te" domain="[('document_type', '=', 'TE')]" />
                <filter string="Notas de Crédito" name="filter_nc" domain="[('document_type', '=', 'NC')]" />
                <filter string="Notas de Débito" name="filter_nd" domain="[('document_type', '=', 'ND')]" />

                <separator />

                <filter string="Email Sent" name="filter_email_sent" domain="[('email_sent', '=', True)]" />
                <filter string="Email Pending" name="filter_email_pending" domain="[('email_sent', '=', False), ('state', '=', 'accepted')]" />

                <separator />

                <filter string="Today" name="filter_today" domain="[('create_date', '&gt;=', datetime.datetime.now().replace(hour=0, minute=0, second=0)),                                  ('create_date', '&lt;=', datetime.datetime.now().replace(hour=23, minute=59, second=59))]" />
                <filter string="This Week" name="filter_this_week" domain="[('create_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]" />
                <filter string="This Month" name="filter_this_month" domain="[('create_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-01'))]" />

                
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}" />
                    <filter string="Document Type" name="group_document_type" context="{'group_by': 'document_type'}" />
                    <filter string="Customer" name="group_partner" context="{'group_by': 'partner_id'}" />
                    <filter string="Invoice Date" name="group_invoice_date" context="{'group_by': 'invoice_date'}" />
                    <filter string="Submission Date" name="group_submission_date" context="{'group_by': 'hacienda_submission_date'}" />
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company" />
                </group>
            </search>
        </field>
    </record>

    
    <record id="view_einvoice_document_kanban" model="ir.ui.view">
        <field name="name">l10n_cr.einvoice.document.kanban</field>
        <field name="model">l10n_cr.einvoice.document</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name" />
                <field name="clave" />
                <field name="document_type" />
                <field name="partner_id" />
                <field name="amount_total" />
                <field name="currency_id" />
                <field name="state" />
                <field name="move_id" />
                <field name="hacienda_message" />
                <field name="error_message" />
                <field name="retry_button_visible" />

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name" />
                                    </strong>
                                    <br />
                                    <span class="o_kanban_record_subtitle">
                                        <field name="partner_id" />
                                    </span>
                                </div>
                                <div class="o_kanban_record_top_right">
                                    <span t-if="record.document_type.raw_value == 'FE'" class="badge bg-info">FE</span>
                                    <span t-if="record.document_type.raw_value == 'TE'" class="badge bg-success">TE</span>
                                    <span t-if="record.document_type.raw_value == 'NC'" class="badge bg-warning">NC</span>
                                    <span t-if="record.document_type.raw_value == 'ND'" class="badge bg-danger">ND</span>
                                </div>
                            </div>

                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-12">
                                        <strong>Invoice: </strong>
                                        <field name="move_id" />
                                    </div>
                                    <div class="col-12" t-if="record.clave.raw_value">
                                        <strong>Clave: </strong>
                                        <span class="text-muted" style="font-size: 10px;">
                                            <t t-esc="record.clave.raw_value.substring(0, 20)" />...
                                        </span>
                                    </div>
                                    <div class="col-12">
                                        <strong>Amount: </strong>
                                        <field name="amount_total" widget="monetary" options="{'currency_field': 'currency_id'}" />
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span t-if="record.error_message.raw_value" class="fa fa-exclamation-triangle text-danger" title="Has Error" />
                                    <span t-if="record.hacienda_message.raw_value" class="fa fa-comment-o" t-att-title="record.hacienda_message.raw_value" />
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    
                                    <button t-if="record.retry_button_visible.raw_value" name="action_retry" type="object" class="btn btn-sm btn-warning" title="Retry Failed Operation">
                                        <i class="fa fa-repeat" />
                                    </button>
                                    <button t-if="record.state.raw_value == 'draft' || record.state.raw_value == 'error'" name="action_generate_xml" type="object" class="btn btn-sm btn-primary" title="Generate XML">
                                        <i class="fa fa-file-code-o" />
                                    </button>
                                    <button t-if="record.state.raw_value == 'generated'" name="action_sign_xml" type="object" class="btn btn-sm btn-primary" title="Sign XML">
                                        <i class="fa fa-pencil" />
                                    </button>
                                    <button t-if="record.state.raw_value == 'signed'" name="action_submit_to_hacienda" type="object" class="btn btn-sm btn-success" title="Submit to Hacienda">
                                        <i class="fa fa-send" />
                                    </button>
                                    <button t-if="record.state.raw_value == 'submitted'" name="action_check_status" type="object" class="btn btn-sm btn-secondary" title="Check Status">
                                        <i class="fa fa-refresh" />
                                    </button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    
    <record id="view_einvoice_document_activity" model="ir.ui.view">
        <field name="name">l10n_cr.einvoice.document.activity</field>
        <field name="model">l10n_cr.einvoice.document</field>
        <field name="arch" type="xml">
            <activity string="Electronic Invoices">
                <field name="name" />
                <templates>
                    <div t-name="activity-box">
                        <div>
                            <field name="name" />
                            <field name="partner_id" muted="1" />
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>

    
    <record id="action_einvoice_document" model="ir.actions.act_window">
        <field name="name">Electronic Invoices</field>
        <field name="res_model">l10n_cr.einvoice.document</field>
        <field name="view_mode">list,form,kanban,activity</field>
        <field name="context">{'search_default_filter_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Electronic Invoice
            </p>
            <p>
                Electronic invoices are automatically generated when you post invoices for Costa Rican customers.
                <br />
                You can also create them manually from the invoice form.
            </p>
        </field>
    </record>

</odoo>